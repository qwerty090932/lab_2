DROP TABLE IF EXISTS candidate;
CREATE TABLE candidate(
    candidate_id INTEGER PRIMARY KEY AUTOINCREMENT,
    candidate_name VARCHAR(40),
    birthday DATE,
    post_id INTEGER,
    FOREIGN KEY (post_id) REFERENCES company (post_id) ON DELETE CASCADE
);
